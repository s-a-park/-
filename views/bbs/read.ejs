<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>board</title>
</head>
<body>
    <%
        console.log("rows : " + JSON.stringify(rows));
        console.log("rows : " + rows.length);
        var column = rows[0];
    %>
    <div class="container">
    <div class="row">
    <div class="col-lg-9">
        <hr>
        <H2 style="color:dodgerblue ;"><a href="/bbs/list">게시글</a></H2>
        <hr>
        <div class="container">
        <div class="row">
            <table border="1" class="table table-striped" style="text-align: center; border: 1px solid #dddddd">
            <tbody>
                <tr>
                    <td style="background-color:paleturquoise ;">글제목</td>
                    <td colspan="2" style="background-color:rgb(225, 255, 225)"><%=column[1]%></td>
                </tr>
                <tr>
                    <td style="background-color:paleturquoise ;">작성자</td>
                    <td colspan="2" style="background-color:rgb(225, 255, 225)"><%=column[2]%></td>
                </tr>
                <tr>
                    <td style="background-color:paleturquoise ;">내용</td>
                    <td colspan="2" style="background-color:rgb(225, 255, 225)"><%=column[3]%></td>
                </tr>
                <tr>
                    <td style="background-color:paleturquoise ;">작성일자</td>
                    <td colspan="2" style="background-color:rgb(225, 255, 225)"><%=column[4]%></td>
                </tr>
                <tr>
                    <td style="background-color:paleturquoise ;">조회수</td>
                    <td colspan="2" style="background-color:rgb(225, 255, 225)"><%=column[5]%></td>
                </tr>
                <tr>
                    <td style="background-color:paleturquoise ;">업로드 된 파일</td>
                    <td colspan="2" style="background-color:rgb(225, 255, 225)"><%=column[6]%></td>
                </tr>
            </tbody>
        </table>
        <a href="/bbs/list"><button class="btn btn-primary" style="margin-right: 10px;">돌아가기</button></a>

        <a href="/bbs/form?brdno=<%=column[0]%>"><button class="btn btn-primary" style="margin-right: 10px;">수정</button></a>
        <a onClick="return confirm('정말로 삭제하겠습니까?')" href="/bbs/delete?brdno=<%=column[0]%>"><button class="btn btn-primary" style="margin-right: 10px;">삭제</button></a>
    </div>
    </div>
        <br>
        <hr>
        <a href="/bbs/wlist?bbs_no=<%=column[0]%>"><button class="btn btn-primary" style="margin-right: 10px;">댓글 보기</button></a><br>
        <a href="/bbs/upload"><button class="btn btn-primary" style="margin-top: 10px;">파일 업로드</button></a>
